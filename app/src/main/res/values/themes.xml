<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.CopenhagenBuzz" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Enable dynamic color -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Enable system edge-to-edge -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="Theme.CopenhagenBuzz" parent="Base.Theme.CopenhagenBuzz">
        <!-- Enable Material You dynamic colors on Android 12+ -->
    </style>

    <!-- Date picker dialog theme -->
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Calendar text styling will inherit from Material 3 -->
    </style>

    <!-- Custom style for the accept and cancel buttons -->
    <style name="AcceptAndCancelText" parent="Widget.Material3.Button.TextButton.Dialog">
        <!-- Will use the system accent color -->
    </style>

    <!-- Custom style for dropdown list items -->
    <style name="CustomDropdownItem" parent="TextAppearance.Material3.BodyMedium">
        <!-- Will use the system colors -->
    </style>
</resources>